<%- include('layout/header', {title : "Jan-Express Admin"}) %>
<% if (locals.message) { %>
    <h3><%= locals.message %></h3>
<% } %>
<% if (locals.users && locals.users.length > 0) { %>
    <div class="manage" style="margin-left: 1cm; margin-right: 1.5cm;">
        <h1 style="padding-top: 0.3cm;"> 
            <a class="" href="/">
                <i data-feather="arrow-left-circle" style="margin-right: 0.5cm; color: grey;"></i>
            </a>
            Manage User / Staff
        </h1>
        <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">
                    Username
                </th>
                <th scope="col">
                    Nama Depan
                </th>
                <th scope="col">
                    Nama Belakang
                </th>
                <th scope="col">
                    Email
                </th>
                <th scope="col">
                    No Telp
                </th>
                <th scope="col">
                    Alamat
                </th>
                <th scope="col">
                    User Type
                </th>
                <th scope="col">
                    Action
                </th>
              </tr>
            </thead>
            <tbody>
              <% for (i in users) { %>
                <tr>
                    <th scope=row>
                        <%= users[i].username %>
                    </th>
                    <td>
                        <%= users[i].nama_depan %>
                    </td>
                    <td>
                        <%= users[i].nama_belakang %>
                    </td>
                    <td>
                        <%= users[i].email %>
                    </td>
                    <td>
                        <%= users[i].no_telp %>
                    </td>
                    <td>
                        <%= users[i].alamat %>
                    </td>
                    <td>
                        <%= users[i].user_type %>
                    </td>
                    <td>
                        <a href="<%= locals.current_path_relative %>/<%= users[i].user_id %>"><button><i data-feather="edit"></i></button></a>
                         | 
                        <a href="<%= locals.current_path_relative %>/hapus/<%= users[i].user_id %>"><button><i data-feather="trash-2"></i></button></a>
                    </td>
                </tr>        
                <% } %>
            </tbody>
          </table>
    </div>
<% } else { %>
<br>
<br>
<h2>Tidak ada pengguna selain anda...</h2>
<% } %>
<%- include('layout/footer') %>