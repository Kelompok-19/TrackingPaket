<%- include('../layout/header', {title : "Jan-Express - Dashboard Edit"}) %>
<br>
<br>
<form id="pickup" name="pickup" method="post" action="<%= locals.current_path %>">
    <div class="data container">
        <h2>Detail pesanan yang akan diambil</h2>
        <hr>
        <div class="row" style="padding-bottom: 0.5cm;">
            <div class="col-sm">
                <label for="pengirim">Nama Pengirim : </label><br>
                <input class="text" name="pengirim" type="text" value="<%= request.nama_pengirim %>" required /><br>
            </div>
            <div class="col-sm">
                <label for="penerima">Nama Penerima : </label><br>
                <input class="text" name="penerima" type="text" value="<%= request.nama_penerima %>" required /><br>
            </div>
        </div>
        <div class="row" style="padding-bottom: 0.5cm;">
            <div class="col-sm">
                <label for="no_telp_pengirim">Nomor Telepon Pengirim : </label><br>
                <input class="text" name="no_telp_pengirim" type="text" value="<%= request.no_telp_pengirim %>" required /><br>
            </div>
            <div class="col-sm">
                <label for="no_telp_penerima">Nomor Telepon Penerima : </label><br>
                <input class="text" name="no_telp_penerima" type="text" value="<%= request.no_telp_penerima %>" required /><br>
            </div>
        </div>
        <div class="row" style="padding-bottom: 0.5cm;">
            <div class="col-sm">
                <label for="alamat_pickup">Alamat Pickup : </label><br>
                <textarea class="textarea" name="alamat_pengirim" type="text" required cols="30" rows="3"><%= request.alamat_pengirim %></textarea>
            </div>
            <div class="col-sm">
                <label for="alamat_tujuan">Alamat Tujuan : </label><br>
                <textarea class="textarea" name="alamat_penerima" type="text" cols="30" rows="3"><%= request.alamat_penerima %></textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-sm">
                <label for="berat">Berat : </label><br>
                <input class="text" name="berat" type="number" min="1" value="<%= request.berat %>" required /><br>
            </div>
        </div>
        <div class="row" style="padding-bottom: 0.5cm;">
            <div class="col-sm">
                <label for="biaya">Biaya : </label><br>
                <input class="text" name="biaya" type="number" min="9000" value="<%= paket.biaya %>" required /><br>
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
                <label for="tipe_status">Status : </label><br>
                <select name="tipe_status">
                    <% for (i in status_codes) { %>
                        <option value="<%= status_codes[i].status_id %>" <% if (status_codes[i].status_id == paket.status) { %>selected<% } %>><%= status_codes[i].status_msg %></option>
                    <% } %>
                </select>
            </div>
        </div>
        <br>
        <button type="submit" style="margin: 0.2cm;">
            <i data-feather="check" style="border-right: solid 1px; margin-right: 0.3cm;"></i>
            <b>Submit</b>
        </button>
        </div>
    <% if (locals.message) { %>
        <h2><%= message %></h2>
    <% } %>
</form>
<%- include('../layout/footer') %>