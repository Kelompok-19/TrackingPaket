<%- include('../layout/header', {title : "Jan-Express - Status"}) %>
<br>
<br>
<div class="waiting" style="margin-left: 1cm; margin-right: 1.5cm;">
    <h1>
        <a class="" href="/status">
            <i data-feather="arrow-left-circle" style="margin-right: 0.5cm; color: grey;"></i>
        </a>
        Pesanan Anda
    </h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Data</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Nomor Resi : </th>
                <td><%= paket.no_resi %></td>             
            </tr>
            <tr>
                <th scope="row">Status : </th>
                <td><%= status %></td>             
            </tr>
            <tr>
                <th scope="row">Waktu Permintaan : </th>
                <td><%= request.createdAt %></td>             
            </tr>
            <tr>
                <th scope="row">Waktu Proses : </th>
                <td><%= paket.createdAt %></td>             
            </tr>
        </tbody>
    </table>
</div>
<div class="waiting" style="padding-left: 1cm;">
    <hr>
    <h1>
        Catatan
    </h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tipe Kejadian</th>
                <th scope="col">Pesan</th>
            </tr>
        </thead>
        <tbody>
            <% for (i in logs) { %>
            <tr>
                <th scope="row"><%= (parseInt(i) + 1) %></th>
                <td><%= logs[i].log_type_name %></td>
                <td><%= logs[i].log_message_prep + ' ' + logs[i].log_msg %></td>       
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
<%- include('../layout/footer') %>