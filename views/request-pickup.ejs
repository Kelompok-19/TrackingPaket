<%- include('layout/header', {title : "Jan-Express" }) %>
    <br>
    <br>
    <form id="pickup" name="pickup" method="post" action="/pickup">
        <div class="data container">
            <h2>
                <a class="" href="./status">
                    <i data-feather="arrow-left-circle" style="margin-right: 0.5cm; color: grey;"></i>
                </a>
                Detail pesanan yang akan diambil
            </h2>
            <hr>
            <div class="row">
                <div class="col-sm">
                    <label for="pengirim">Nama Pengirim : </label><br>
                    <input class="text" name="pengirim" type="text"
                        value="<%= locals.user['nama_depan'] + ' ' + locals.user['nama_belakang'] %>" required /><br>
                </div>
                <div class="col-sm">
                    <label for="penerima">Nama Penerima : </label><br>
                    <input class="text" name="penerima" type="text" required /><br>
                </div>
            </div>
            <div class="row" style="padding-top: 0.5cm;">
                <div class="col-sm">
                    <label for="no_telp_pengirim">Nomor Telepon Pengirim : </label><br>
                    <input class="text" name="no_telp_pengirim" type="text" value="<%= locals.user['no_telp'] %>"
                        required /><br>
                </div>
                <div class="col-sm">
                    <label for="no_telp_penerima">Nomor Telepon Penerima : </label><br>
                    <input class="text" name="no_telp_penerima" type="text" required /><br>
                </div>
            </div>
            <div class="row" style="padding-top: 0.5cm;">
                <div class="col-sm">
                    <label for="alamat_pickup">Alamat Pickup : </label><br>
                    <textarea class="text" name="alamat_pengirim" type="text" value="<%= locals.user['alamat'] %>"
                        rows="3" cols="30" required></textarea>
                    <br>
                </div>
                <div class="col-sm">
                    <label for="alamat_tujuan">Alamat Tujuan : </label><br>
                    <textarea class="text" name="alamat_penerima" type="text" rows="3" cols="30"
                        required></textarea><br>
                </div>
            </div>
            <div class="row" style="padding-top: 0.5cm;">
                <div class="col-sm">
                    <label for="berat">Berat (kg) : </label><br>
                    <input class="text" name="berat" type="number" min="1" value="1" required /><br>
                </div>
            </div>
            <br>
            <br>
            <input class="button" type="submit" value="Submit"
                style="border: solid 2px; padding: 0.2cm; border-radius: 5px;" />
            <% if (locals.message) { %>
                <h2>
                    <%= message %>
                </h2>
                <% } %>
        </div>
    </form>
    <%- include('layout/footer') %>